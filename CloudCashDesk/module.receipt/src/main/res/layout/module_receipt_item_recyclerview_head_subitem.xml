<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_content">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/icon_card"
        android:drawablePadding="3dp"
        android:drawableStart="@drawable/icon_card"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/text_sub_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/icon_delete"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/icon_delete"
        android:gravity="center_vertical"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>