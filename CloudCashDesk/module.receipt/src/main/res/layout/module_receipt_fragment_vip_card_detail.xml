<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginLeft="@dimen/padding_content"
            android:layout_marginRight="@dimen/padding_content">

            <ImageView
                android:id="@+id/image_vip_card_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/icon_default_vip_card" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--头部-->
                <TextView
                    android:id="@+id/text_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="center"
                    android:textColor="@color/primaryColor" />
                <!--中间-->
                <LinearLayout
                    android:id="@+id/layout_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_shop_name"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_card_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/text_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/primaryColor"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

                <!--底部-->
                <LinearLayout
                    android:id="@+id/layout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:background="@drawable/shape_bottom_transparent_circle"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_micro"
                    android:paddingTop="@dimen/padding_micro">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/module_receipt_ratio"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/text_card_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/module_receipt_color_yellow"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5px"
                        android:layout_height="match_parent"
                        android:background="@color/secondaryTextColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/module_receipt_balance"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/text_card_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/module_receipt_color_yellow"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5px"
                        android:layout_height="match_parent"
                        android:background="@color/secondaryTextColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:text="@string/module_receipt_degree"
                            android:textColor="@color/primaryColor"
                            android:textSize="@dimen/text_size" />

                        <TextView
                            android:id="@+id/text_card_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/module_receipt_color_yellow"
                            android:textSize="@dimen/text_size_normal" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_vip_card_type_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_above="@id/layout_bottom"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_vip_card_chain" />
            </RelativeLayout>

        </RelativeLayout>


        <!--白色部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_content"
            android:background="@color/primaryColor"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_vip_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_normal"
                    android:padding="@dimen/margin_content">

                    <TextView
                        android:id="@+id/text_card_account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/text_card_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/text_size_normal" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginRight="@dimen/margin_content"
                    android:background="@color/default_divide" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/module_receipt_use_balance"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="@dimen/text_size_normal" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_use_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:checked="true" />

            </RelativeLayout>

            <!--打卡使用余额支付-->
            <LinearLayout
                android:id="@+id/linear_use_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginRight="@dimen/margin_content"
                    android:background="@color/default_divide" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/module_receipt_receive_money"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/text_size_normal" />


                    <TextView
                        android:id="@+id/text_need_pay_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/text_size_normal" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginRight="@dimen/margin_content"
                    android:background="@color/default_divide" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:id="@+id/text_receive_money_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/padding_content"
                        android:text="@string/module_receipt_result_money"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/text_size_normal" />

                    <com.zmsoft.ccd.lib.widget.EditFoodNumberView
                        android:id="@+id/edit_need_receive_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        app:module_menu_middle_hint_color="@color/hintTextColor"
                        app:module_menu_middle_hint_text="@string/module_menu_input_require"
                        app:module_menu_middle_min_value="0"
                        app:module_menu_middle_text_color="@color/common_blue"
                        app:module_menu_middle_text_size="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginRight="@dimen/margin_content"
                    android:background="@color/default_divide" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_normal"
                    android:padding="@dimen/margin_content">

                    <TextView
                        android:id="@+id/text_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/module_receipt_pass_word"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/text_size_normal" />

                    <EditText
                        android:id="@+id/edit_card_pass_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_toRightOf="@id/text_pass"
                        android:background="@null"
                        android:drawablePadding="@dimen/margin_small"
                        android:gravity="right|center"
                        android:hint="@string/module_receipt_input_pass_word"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/margin_content"
                        android:singleLine="true"
                        android:textColor="@color/tertiaryTextColor"
                        android:textSize="@dimen/text_size_normal"
                        android:textCursorDrawable="@drawable/edit_cursor_color"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_ok"
            style="@style/NormalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center"
            android:text="@string/ok"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

</ScrollView>