<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/instance_list_item_bg"
    android:minHeight="@dimen/instance_name_height"
    android:paddingLeft="@dimen/instance_name_padding_left_right"
    android:paddingRight="@dimen/instance_name_padding_left_right">

    <TextView
        android:id="@+id/select_instance_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/common_front_black"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>