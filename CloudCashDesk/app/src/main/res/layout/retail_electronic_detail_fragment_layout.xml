<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_orderinfo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_jag_up"
            layout="@layout/item_divider_jag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/jag_height" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/text_receipt_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_normal"
                tools:text="微信支付" />

            <TextView
                android:id="@+id/text_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:textColor="@color/accentColor"
                android:textSize="24sp"
                tools:text="¥180.00" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/margin_micro"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small"
                tools:text="支付成功" />

            <View
                style="@style/DividerStyle"
                android:layout_marginTop="30dp" />

            <LinearLayout
                android:id="@+id/layout_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_vip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/home_electronic_detail_vip"
                    android:textColor="@color/tertiaryTextColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/text_vip_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginStart="@dimen/margin_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size_small"
                    tools:text="王先生" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_order_id_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/home_electronic_detail_order_id"
                    android:textColor="@color/tertiaryTextColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/text_order_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginStart="@dimen/margin_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size_small"
                    tools:text="NO123" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_order_serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_serial_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/home_electronic_detail_seat_code"
                    android:textColor="@color/tertiaryTextColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/text_serial_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginStart="@dimen/margin_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size_small"
                    tools:text="12314214" />
            </LinearLayout>

            <View
                style="@style/DividerStyle"
                android:layout_marginTop="@dimen/margin_small" />

            <LinearLayout
                android:id="@+id/layout_weixin_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_order_code_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/home_electronic_detail_order_code"
                    android:textColor="@color/tertiaryTextColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/text_order_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginStart="@dimen/margin_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size_small"
                    tools:text="000werwer" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_pay_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_pay_time_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/home_electronic_detail_pay_time"
                    android:textColor="@color/tertiaryTextColor"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/text_pay_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_content"
                    android:layout_marginStart="@dimen/margin_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="@dimen/text_size_small"
                    tools:text="2017-08-15" />
            </LinearLayout>

            <View
                android:id="@+id/view_refund_divider"
                style="@style/DividerStyle"
                android:layout_marginTop="@dimen/margin_small"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/shape_rect_stroke_red_button_toggle_ripple"
                android:paddingBottom="@dimen/padding_micro"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="@dimen/padding_micro"
                android:text="@string/home_electronic_detail_refund"
                android:textColor="@color/accentColor"
                android:textSize="@dimen/text_size_small"
                android:visibility="gone" />
        </LinearLayout>

        <include
            android:id="@+id/layout_jag_bottom"
            layout="@layout/item_divider_bottom_jag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/jag_height" />
    </LinearLayout>
</LinearLayout>
