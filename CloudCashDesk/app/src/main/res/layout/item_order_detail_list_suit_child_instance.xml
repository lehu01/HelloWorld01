<?xml version="1.0" encoding="utf-8"?>
<com.zmsoft.ccd.lib.widget.couponview.LinearLayoutCouponView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_micro"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium"
    android:paddingTop="@dimen/margin_micro"
    app:cv_semicircle_color="@color/cv_semicircle_color"
    app:cv_semicircle_gap="@dimen/cv_semicircle_gap"
    app:cv_semicircle_radius="@dimen/cv_semicircle_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_instance_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/linear_instance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image_instance_state"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_suit_child_point"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="@dimen/padding_micro"
                    android:background="@color/primaryDarkColor"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/text_instance_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/secondaryTextColor"/>

                <TextView
                    android:id="@+id/text_instance_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_micro"
                    android:layout_toLeftOf="@id/text_instance_count"
                    android:layout_toRightOf="@id/text_suit_child_point"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/primaryTextColor"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/text_instance_specification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_size"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/DividerStyle"
        android:layout_marginTop="@dimen/margin_micro"/>

</com.zmsoft.ccd.lib.widget.couponview.LinearLayoutCouponView>