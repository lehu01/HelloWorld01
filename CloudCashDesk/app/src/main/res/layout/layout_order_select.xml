<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:orientation="vertical">
        <!--订单类型-->
        <LinearLayout
            android:id="@+id/linear_order_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_content"
                android:text="@string/filter_order_type_title"
                android:textColor="@color/filter_title"/>

            <GridView
                android:id="@+id/grid_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_marginRight="@dimen/margin_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="2dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_marginRight="@dimen/margin_content"
                android:layout_marginTop="@dimen/margin_content"
                android:background="@color/default_divide"/>
        </LinearLayout>
        <!--订单状态-->
        <LinearLayout
            android:id="@+id/linear_order_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_content"
                android:text="@string/filter_order_state_title"
                android:textColor="@color/filter_title"/>

            <GridView
                android:id="@+id/grid_order_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_marginRight="@dimen/margin_content"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:verticalSpacing="2dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/margin_content"
                android:layout_marginRight="@dimen/margin_content"
                android:layout_marginTop="@dimen/margin_content"
                android:background="@color/default_divide"/>
        </LinearLayout>
        <!--筛选-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/margin_content">

            <Button
                android:id="@+id/button_filter_cancel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/selector_filter_cancel"
                android:text="@string/filter_cancel"
                android:textColor="@color/filter_text_color"/>

            <Button
                android:id="@+id/button_filter_ok"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_btn_red"
                android:text="@string/filter_ok"
                android:textColor="@color/primaryColor"/>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>