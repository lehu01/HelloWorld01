<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:paddingLeft="25dp"
        android:paddingRight="@dimen/padding_small"
        android:paddingStart="25dp"
        android:paddingTop="@dimen/padding_micro">

        <TextView
            android:id="@+id/text_foodnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/text_size_small"
            tools:text="x1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/text_foodnum"
            android:layout_toStartOf="@id/text_foodnum"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_foodname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/shape_rect_black_point"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/shape_rect_black_point"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_size_small"
                tools:text="商商品商品商品商品商品商品商品商品商品品" />

            <TextView
                android:id="@+id/text_fooddesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_foodname"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small"
                tools:text="备注备注备注备注备注备注备注备注备注备注备注" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>