<?xml version="1.0" encoding="utf-8"?>
<com.zmsoft.ccd.lib.widget.couponview.RelativeLayoutCouponView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_small" />

    <com.zmsoft.ccd.lib.widget.couponview.LinearLayoutCouponView
        android:id="@+id/layout_orderinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_space"
        android:background="@color/list_item_bg"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium"
        app:cv_is_semicircle_bottom="true"
        app:cv_is_semicircle_top="true"
        app:cv_semicircle_color="@color/cv_semicircle_color"
        app:cv_semicircle_gap="@dimen/cv_semicircle_gap"
        app:cv_semicircle_radius="@dimen/cv_semicircle_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_order_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_xlarge" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small">

            <TextView
                android:id="@+id/text_desk_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/msg_detail_order_deskid"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_desk_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/text_desk_id_label"
                android:layout_toRightOf="@id/text_desk_id_label"
                android:textColor="@color/chart_color4"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/text_people_count"
                android:layout_toRightOf="@id/text_people_count"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/accentColor"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_order_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_small" />
        <!--支付信息模块-->
        <include
            android:id="@+id/layout_payinfo"
            layout="@layout/layout_payinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.zmsoft.ccd.lib.widget.couponview.LinearLayoutCouponView>

    <ImageView
        android:id="@+id/image_msg_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/padding_content"
        android:layout_marginRight="@dimen/padding_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_order_rejected" />
</com.zmsoft.ccd.lib.widget.couponview.RelativeLayoutCouponView>