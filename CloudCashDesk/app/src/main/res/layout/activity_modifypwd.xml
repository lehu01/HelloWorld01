<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_profile_modifypwd_oldpwd"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/edit_old_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="end"
                android:hint="@string/person_profile_modifypwd_oldpwd_hint"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_size_normal"
                android:textCursorDrawable="@drawable/edit_cursor_color"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_divide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_profile_modifypwd_newpwd"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/edit_new_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="end"
                android:hint="@string/person_profile_modifypwd_newpwd_hint"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_size_normal"
                android:textCursorDrawable="@drawable/edit_cursor_color"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_divide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_medium">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/person_profile_modifypwd_confirmpwd"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/edit_confirm_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="end"
                android:hint="@string/person_profile_modifypwd_confirmpwd_hint"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@color/secondaryTextColor"
                android:textSize="@dimen/text_size_normal"
                android:textCursorDrawable="@drawable/edit_cursor_color"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/default_divide" />
    </LinearLayout>

    <Button
        android:id="@+id/button_sure"
        style="@style/NormalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:enabled="false"
        android:text="@string/bt_sure" />
</LinearLayout>