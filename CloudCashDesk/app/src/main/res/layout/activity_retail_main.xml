<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/activity_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--侧滑菜单-->
        <LinearLayout
            android:layout_width="@dimen/message_list_filter_height"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#fff">

            <include
                layout="@layout/layout_retail_message_list_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </android.support.v4.widget.DrawerLayout>

    <!--右边浮标-->
    <TextView
        android:id="@+id/text_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_filter"
        android:clickable="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="5dp"
        android:text="@string/show_type"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_small" />

    <ViewStub
        android:id="@+id/view_stub_main_activity_green_hand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_main_activity_guide" />
</RelativeLayout>


