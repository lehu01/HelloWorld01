<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_feedback_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/feedback_input_height"
                android:background="@null"
                android:gravity="start"
                android:hint="@string/person_feedback_hint"
                android:padding="@dimen/padding_medium"
                android:textColor="@color/primaryTextColor"
                android:textColorHint="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_normal"
                android:textCursorDrawable="@drawable/edit_cursor_color"/>

            <View style="@style/DividerStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/person_feedback_contact_email"
                    android:textColor="@color/primaryDarkColor"
                    android:textSize="@dimen/text_size_normal" />

                <EditText
                    android:id="@+id/edit_feedback_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_micro"
                    android:layout_marginStart="@dimen/margin_micro"
                    android:background="@null"
                    android:hint="@string/person_feedback_contact_email_hint"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/primaryTextColor"
                    android:textColorHint="@color/tertiaryTextColor"
                    android:textSize="@dimen/text_size_normal"
                    android:textCursorDrawable="@drawable/edit_cursor_color"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_send_feedback"
            style="@style/NormalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/person_feedback_send_feedback" />
    </LinearLayout>
</ScrollView>