<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zmsoft.ccd.lib.widget.couponview.LinearLayoutCouponView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        app:cv_is_semicircle_bottom="false"
        app:cv_is_semicircle_top="true"
        app:cv_semicircle_color="@color/cv_semicircle_color"
        app:cv_semicircle_gap="@dimen/cv_semicircle_gap"
        app:cv_semicircle_radius="@dimen/cv_semicircle_radius"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:background="#eaf0f6"
            android:padding="@dimen/padding_small">

            <TextView
                android:id="@+id/text_takeout_order_original"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:drawableTop="@drawable/ic_order_from_meituan"
                android:gravity="center_horizontal"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_micro"
                tools:text="美团" />

            <TextView
                android:id="@+id/text_takeout_order_delivery_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toEndOf="@id/text_takeout_order_original"
                android:layout_toRightOf="@id/text_takeout_order_original"
                android:lineSpacingExtra="2sp"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_normal"
                tools:text="到店自取" />

            <TextView
                android:id="@+id/text_takeout_order_appointment_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_micro"
                android:layout_marginStart="@dimen/margin_micro"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/text_takeout_order_delivery_way"
                android:layout_toRightOf="@id/text_takeout_order_delivery_way"
                android:background="@drawable/module_takeout_shape_takeout_appointment_flag"
                android:paddingBottom="1dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="1dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_micro"
                tools:text="预约外卖" />

            <TextView
                android:id="@+id/text_takeout_order_take_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/text_takeout_order_delivery_way"
                android:layout_alignStart="@id/text_takeout_order_delivery_way"
                android:layout_alignBottom="@id/text_takeout_order_original"
                android:lineSpacingExtra="0sp"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_micro"
                tools:text="顾客自取时间：今日 17:30" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_takeout_order_person_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:text="@string/takeout_msg_pay_detail_receiver"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_takeout_order_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                tools:text="王先生" />

            <TextView
                android:id="@+id/text_takeout_order_person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="14dp"
                android:drawableEnd="@drawable/module_takeout_ic_order_phone"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/module_takeout_ic_order_phone"
                android:gravity="center_vertical"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_small"
                tools:text="(1590009999)" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="17dp">

            <TextView
                android:id="@+id/text_takeout_order_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:drawableEnd="@drawable/module_takeout_ic_order_address"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/module_takeout_ic_order_address"
                android:gravity="center_vertical"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small"
                tools:text="3.6km" />

            <TextView
                android:id="@+id/text_takeout_order_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_takeout_order_distance"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_toLeftOf="@id/text_takeout_order_distance"
                android:layout_toStartOf="@id/text_takeout_order_distance"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/text_size_small"
                tools:text="杭杭州杭州杭州杭州杭州杭州杭州杭州州" />
        </RelativeLayout>

        <View
            android:id="@+id/view_divider"
            style="@style/DividerStyle"
            android:layout_marginTop="@dimen/margin_small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/takeout_detail_good_name_label"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/text_people_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small"
                tools:text="用餐人数:2" />

            <TextView
                android:id="@+id/text_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:textColor="@color/tertiaryTextColor"
                android:textSize="@dimen/text_size_small"
                tools:text="共3件" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_small"
            tools:text="备注：一定要新版包装" />

    </com.zmsoft.ccd.lib.widget.couponview.LinearLayoutCouponView>

    <ImageView
        android:id="@+id/image_msg_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/margin_micro"
        android:layout_marginRight="@dimen/margin_micro"
        android:layout_marginTop="@dimen/margin_micro"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_order_rejected" />

</RelativeLayout>