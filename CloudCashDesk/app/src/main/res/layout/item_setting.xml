<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/msg_setting_item_padding_top_bottom"
    android:paddingLeft="@dimen/msg_setting_item_padding_left_right"
    android:paddingRight="@dimen/msg_setting_item_padding_left_right"
    android:paddingTop="@dimen/msg_setting_item_padding_top_bottom">

    <View
        android:id="@+id/view_sub_label"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_rect_black_point"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/view_sub_label"
        android:layout_toRightOf="@id/view_sub_label"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_setting_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_normal"
                tools:text="接收推送消息" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/checkbox_setting"
                android:layout_width="@dimen/msg_setting_checkbox_width"
                android:layout_height="@dimen/msg_setting_checkbox_height"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_setting_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible"
            tools:text="关闭后，将不会收到推送消息" />


    </LinearLayout>
</RelativeLayout>