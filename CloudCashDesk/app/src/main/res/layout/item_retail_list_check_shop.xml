<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="0.5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white80"
        android:padding="12dp">

        <ImageView
            android:id="@+id/image_shop_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/icon_shop_default"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/text_shop_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/res_shape_retail_shop_retail"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/retail_label"
            android:textColor="#ffffff"
            android:textSize="8sp"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_working"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_retail_bg_round_green"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/padding_micro"
            android:paddingRight="@dimen/padding_micro"
            android:paddingTop="3dp"
            android:text="@string/working"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/text_size" />

        <RelativeLayout
            android:id="@+id/linear_content"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toLeftOf="@id/text_working"
            android:layout_toRightOf="@id/image_shop_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/primaryDarkColor"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/text_shop_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/text_shop_name"
                android:layout_marginTop="4dp"
                android:textColor="@color/shop_code_role"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/text_shop_role_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textColor="@color/shop_code_role"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>