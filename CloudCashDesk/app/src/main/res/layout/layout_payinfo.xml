<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_divider"
        style="@style/DividerStyle"
        android:layout_marginTop="@dimen/margin_small" />

    <LinearLayout
        android:id="@+id/layout_receiveable_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_receiveable_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/receivable_money"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/text_received_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/received_money"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_exceed_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_exceed_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/pay_more"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_consume_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_consume_fee_lable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/consumption_money"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_consume_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_service_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_service_fee_lable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/service_money"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_service_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_minimum_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_minimum_fee_lable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/origin_least_amount"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_minimum_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_discount_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_discount_fee_lable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/offers_money"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_discount_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <View
        android:id="@+id/view_accounts_divider"
        style="@style/DividerStyle"
        android:layout_marginTop="@dimen/margin_small" />

    <TextView
        android:id="@+id/text_checkout_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/receipt_detail"
        android:textColor="@color/tertiaryTextColor"
        android:textSize="@dimen/text_size" />
</LinearLayout>