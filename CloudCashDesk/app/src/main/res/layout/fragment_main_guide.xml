<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_main_guide_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/header_main_guide_top_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent70"
            />

        <View
            android:id="@+id/header_main_guide_shop_limit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent70"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/layout_fragment_main_guide_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/transparent70"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_small"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/text_main_guide_step_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_small"
                    android:drawableTop="@drawable/ic_shortcut_receipt"
                    android:gravity="center_horizontal"
                    android:text="@string/short_cut_receipt"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:clickable="false"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/padding_small"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/text_main_guide_step_1_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/icon_main_activity_guide_1_frame"
                    android:gravity="center_horizontal"
                    android:text="@string/main_activity_green_hand_step_1_hint"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:clickable="false"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/holder_place_main_guide_delivery"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent70"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layout_main_guide_recycler_view_first_line"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <View
                android:id="@+id/view_main_guide_step_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent70"/>

            <View
                android:id="@+id/view_main_guide_step_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent70"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent70"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_main_guide_recycler_view_first_line_hint"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:background="@color/transparent70">

            <TextView
                android:id="@+id/view_main_guide_step_2_hint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:text="@string/main_activity_green_hand_step_2_hint"/>

            <TextView
                android:id="@+id/view_main_guide_step_3_hint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:text="@string/main_activity_green_hand_step_3_hint"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_main_guide_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent70" />

        <View
            android:id="@+id/view_main_guide_step_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent70"/>
        <View
            android:id="@+id/view_main_guide_step_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent70"/>
        <View
            android:id="@+id/view_main_guide_step_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent70"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_main_guide_top"
        android:layout_above="@+id/layout_main_guide_tab_bar"
        android:background="@color/transparent70">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_main_guide_step_4_hint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:text="@string/main_activity_green_hand_step_4_hint"/>

            <TextView
                android:id="@+id/text_main_guide_step_5_hint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:text="@string/main_activity_green_hand_step_5_hint"/>

            <TextView
                android:id="@+id/text_main_guide_step_6_hint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:text="@string/main_activity_green_hand_step_6_hint"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_main_guide_next"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="117dp"
        android:gravity="center"
        android:background="@drawable/shape_guide_button"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal"
        android:text="@string/main_activity_green_hand_next"/>

</RelativeLayout>