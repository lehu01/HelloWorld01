<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <View
        android:id="@+id/view_op_order_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_content"
            android:layout_marginRight="@dimen/margin_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_print_dishes_order"
                android:layout_width="@dimen/circle_red_size"
                android:layout_height="@dimen/circle_red_size"
                android:background="@drawable/shape_circle_red_with_white_stroke"
                android:clickable="true"
                android:drawableTop="@drawable/icon_print_dishes_order"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_micro"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/print_order_dishes_order"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/text_size_micro"/>

            <TextView
                android:id="@+id/text_print_account_order"
                android:layout_width="@dimen/circle_red_size"
                android:layout_height="@dimen/circle_red_size"
                android:layout_marginLeft="40dp"
                android:background="@drawable/shape_circle_red_with_white_stroke"
                android:clickable="true"
                android:drawableTop="@drawable/icon_print_account_order"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_micro"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/print_order_account_order"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/text_size_micro"/>

            <TextView
                android:id="@+id/text_change_order"
                android:layout_width="@dimen/circle_red_size"
                android:layout_height="@dimen/circle_red_size"
                android:layout_marginLeft="40dp"
                android:background="@drawable/shape_circle_red_with_white_stroke"
                android:clickable="true"
                android:drawableTop="@drawable/icon_edit"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_micro"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/update_order"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/text_size_micro"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_cancel_order"
                android:layout_width="@dimen/circle_red_size"
                android:layout_height="@dimen/circle_red_size"
                android:background="@drawable/shape_circle_red_with_white_stroke"
                android:clickable="true"
                android:drawableTop="@drawable/icon_cancel_order"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_micro"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/cancel_order"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/text_size_micro"/>

            <TextView
                android:id="@+id/text_push_order"
                android:layout_width="@dimen/circle_red_size"
                android:layout_height="@dimen/circle_red_size"
                android:layout_marginLeft="40dp"
                android:background="@drawable/shape_circle_red_with_white_stroke"
                android:clickable="true"
                android:drawableTop="@drawable/icon_push_order"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_micro"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/push_order"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/text_size_micro"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>