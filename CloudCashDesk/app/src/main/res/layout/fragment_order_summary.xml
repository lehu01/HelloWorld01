<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout_order_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_order_summary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/common_divider_line"
            android:dividerHeight="1px"
            android:scrollbars="none" />

    </android.support.v4.widget.SwipeRefreshLayout>


    <TextView
        android:id="@+id/text_order_summary_print"
        style="@style/BottomTextRedCircleStyle"
        android:drawableTop="@drawable/icon_order_summary_print"
        android:text="@string/print"
        android:visibility="visible" />

</RelativeLayout>