<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_msg_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/bottom_space_height"
        android:paddingLeft="@dimen/padding_content"
        android:paddingRight="@dimen/padding_content" />

    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_large"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/image_reject"
                style="@style/BottomTextRedCircleStyle"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_circle_black_button"
                android:drawableTop="@drawable/icon_reject"
                android:text="@string/msg_detail_order_reject"
                android:visibility="visible" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_agree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">

            <TextView
                android:id="@+id/image_agree"
                style="@style/BottomTextRedCircleStyle"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/icon_sure"
                android:text="@string/msg_detail_order_agree"
                android:visibility="visible" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</RelativeLayout>