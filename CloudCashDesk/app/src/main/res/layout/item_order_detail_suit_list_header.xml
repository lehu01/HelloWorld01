<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium"
    android:paddingTop="@dimen/margin_micro">

    <!--套菜头部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/margin_micro"
            android:layout_marginTop="@dimen/margin_micro"
            android:background="@drawable/shape_bg_round_red"
            android:gravity='center'
            android:paddingLeft="@dimen/padding_content"
            android:paddingRight="@dimen/padding_content"
            android:text="@string/msg_detail_combo_foods_label"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/text_suit_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="@dimen/margin_micro"
            android:layout_marginTop="@dimen/margin_micro"
            android:ellipsize="end"
            android:gravity='center'
            android:paddingLeft="@dimen/padding_content"
            android:paddingRight="@dimen/padding_content"
            android:singleLine="true"
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_memo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity='center'
        android:textColor="@color/tertiaryTextColor"
        android:textSize="@dimen/text_size"
        android:visibility="gone" />

    <!--套菜价格和数量-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_suit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity='center'
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/text_suit_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity='center'
            android:textColor="@color/tertiaryTextColor"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <View
        style="@style/DividerStyle"
        android:layout_marginTop="@dimen/margin_small" />

</LinearLayout>