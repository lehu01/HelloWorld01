<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/mistake_item_min_height"
    android:paddingLeft="@dimen/mistake_content_margin_left_right"
    android:paddingRight="@dimen/mistake_content_margin_left_right"
    android:gravity="center_vertical"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_separated_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_small"
        android:paddingTop="@dimen/padding_small"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_front_gery"
            android:drawableTop="@drawable/icon_notification"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/text_size_normal"
            android:drawablePadding="6dp"/>

        <TextView
            android:id="@+id/text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/accentColor"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/seat_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seat_name"
            android:layout_toRightOf="@id/text_id"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/text_seat_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/seat_name_text"
            android:textColor="@color/common_blue"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:id="@+id/text_mistake_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_id"
            android:textColor="@color/common_front_black"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"/>

    </RelativeLayout>

</RelativeLayout>