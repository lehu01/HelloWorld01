<?xml version="1.0" encoding="utf-8"?>
<com.zmsoft.ccd.lib.widget.couponview.RelativeLayoutCouponView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0.5dp"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/padding_medium"
    android:paddingRight="@dimen/padding_medium"
    android:paddingTop="@dimen/margin_small"
    app:cv_semicircle_color="@color/cv_semicircle_color"
    app:cv_semicircle_gap="@dimen/cv_semicircle_gap"
    app:cv_semicircle_radius="@dimen/cv_semicircle_radius">

    <ImageView
        android:id="@+id/image_user_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/text_instance_all_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/text_user_nice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_micro"
        android:layout_marginRight="@dimen/margin_micro"
        android:layout_toEndOf="@id/image_user_icon"
        android:layout_toLeftOf="@id/text_instance_all_count"
        android:layout_toRightOf="@id/image_user_icon"
        android:layout_toStartOf="@id/text_instance_all_count"
        android:ellipsize="end"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/text_open_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <View
        style="@style/DividerStyle"
        android:layout_below="@id/image_user_icon"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="@dimen/margin_small"/>

</com.zmsoft.ccd.lib.widget.couponview.RelativeLayoutCouponView>