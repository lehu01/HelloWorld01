<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/item_divider_tran_up_jag_white_90" />

    <RelativeLayout
        android:id="@+id/content_view_order_particulars"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white90">

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_bg_round_white">

            <TextView
                android:id="@+id/text_order_particulars_order_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/black"
                android:text="@string/order_particulars_order_id_example"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/text_order_particulars_seat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/common_value_text_color"
            android:text="@string/order_particulars_source_example"/>

        <TextView
            android:id="@+id/text_order_particulars_serial_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/common_value_text_color"
            android:text="@string/order_particulars_serial_number_example"/>

        <TextView
            android:id="@+id/text_order_particulars_time_hhmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/common_value_text_color"
            android:text="@string/order_particulars_time_hhmm_example"/>

        <TextView
            android:id="@+id/text_order_particulars_consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:textSize="@dimen/text_size_xlarge"
            android:textColor="@color/accentColor"
            android:text="@string/order_particulars_consumption_example"/>

    </RelativeLayout>

    <include layout="@layout/item_divider_tran_bottom_jag_white_90" />

</LinearLayout>