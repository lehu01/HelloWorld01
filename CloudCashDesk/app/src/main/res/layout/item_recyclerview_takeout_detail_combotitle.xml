<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/list_item_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/view_divider"
        style="@style/DividerStyle" />

    <TextView
        android:id="@+id/text_combo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:background="@drawable/module_takeout_shape_suite_food"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/msg_detail_combo_foods_label"
        android:textColor="#ffffff"
        android:textSize="@dimen/text_size_micro" />

    <TextView
        android:id="@+id/text_foodnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_micro"
        android:layout_marginStart="@dimen/margin_micro"
        android:layout_marginTop="@dimen/margin_small"
        android:paddingEnd="@dimen/padding_small"
        android:paddingRight="@dimen/padding_small"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_small"
        tools:text="x1" />

    <TextView
        android:id="@+id/text_combo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_micro"
        android:layout_marginStart="@dimen/margin_micro"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toEndOf="@id/text_combo_label"
        android:layout_toLeftOf="@id/text_foodnum"
        android:layout_toRightOf="@id/text_combo_label"
        android:layout_toStartOf="@id/text_foodnum"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:singleLine="true"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_large"
        tools:text="合家套餐" />
</RelativeLayout>