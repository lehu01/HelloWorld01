<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 分割线颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/default_divide" />
        </shape>
    </item>

    <!-- 主体背景颜色值 -->
    <!-- 此处定义只有下边有边框 高度为1像素-->
    <item android:bottom="1px">
        <!--边框里面背景颜色 白色-->
        <shape>
            <solid android:color="@color/gray_bg" />
        </shape>
    </item>
</layer-list>