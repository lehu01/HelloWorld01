<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/bg_btn_inverse_normal" />

            <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/bg_btn_inverse_normal" />

            <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_btn_inverse_normal" />

            <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/bg_btn_inverse_stroke" />

                    <stroke android:width="1dp" android:color="@color/bg_btn_inverse_stroke" />

                    <corners android:bottomRightRadius="3dp" android:topRightRadius="3dp" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="3dp" android:top="1dp">
                <color android:color="@color/bg_btn_inverse_stroke" />
            </item>
        </layer-list>
    </item>

</selector>