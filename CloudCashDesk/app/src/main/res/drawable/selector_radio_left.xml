<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--选中-->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/bg_btn_inverse_normal"/>

            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"/>
        </shape>
    </item>
    <!--选中-->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/bg_btn_inverse_normal"/>

            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"/>
        </shape>
    </item>
    <!--按下-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_btn_inverse_normal"/>

            <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"/>
        </shape>
    </item>
    <!--没有选中-->
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/toolbarColor"/>

                    <stroke android:width="1dp" android:color="@color/toolbarColor"/>

                    <corners android:bottomLeftRadius="3dp" android:topLeftRadius="3dp"/>
                </shape>
            </item>
            <item android:bottom="1dp" android:left="3dp" android:top="1dp">
                <color android:color="@color/toolbarColor"/>
            </item>
        </layer-list>
    </item>

</selector>