<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:text="TITLE" />


    <TextView
        android:id="@+id/text_tab_count"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_tab_title"
        android:layout_alignTop="@+id/text_tab_title"
        android:layout_marginTop="-6dp"
        android:background="@drawable/module_takeout_shape_takeout_circle_num"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="12sp"
        tools:text="2" />

</RelativeLayout>