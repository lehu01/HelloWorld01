<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/text_size_normal" />

    <RelativeLayout
        android:id="@+id/layout_price_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_toLeftOf="@id/text_price"
        android:layout_toStartOf="@id/text_price"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/module_menu_custom_food_label_price"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <com.zmsoft.ccd.lib.widget.ShopSpecialityView
            android:id="@+id/shop_speciality_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_name"
            android:layout_marginTop="@dimen/margin_small"
            app:module_menu_shop_speciality_chili_image="@drawable/module_menu_chili_rate"
            app:module_menu_shop_speciality_chili_rate="2"
            app:module_menu_shop_speciality_recommendation_image="@drawable/module_menu_recommend_rate"
            app:module_menu_shop_speciality_recommendation_rate="2"
            app:module_menu_shop_speciality_text="@string/module_menu_shop_specialty"
            app:module_menu_shop_speciality_text_color="@color/module_menu_price_red"
            app:module_menu_shop_speciality_text_size="10sp" />
    </RelativeLayout>
</RelativeLayout>