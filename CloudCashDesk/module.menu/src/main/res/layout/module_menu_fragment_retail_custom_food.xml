<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zmsoft.ccd.lib.widget.LinearLayoutDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        app:divider="@drawable/shape_divider_line"
        app:showDividers="middle">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/text_label_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/module_menu_custom_food_margin"
                android:layout_marginRight="10dp"
                android:text="@string/module_menu_custom_food_label_name"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_food_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/module_menu_custom_food_margin"
                android:layout_toRightOf="@id/text_label_food_name"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="@string/module_menu_input_require"
                android:maxLength="30"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:textColor="@color/common_blue"
                android:textColorHint="#FFE02200"
                android:textSize="14sp">

                <requestFocus />
            </EditText>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_category"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/module_menu_custom_food_margin"
                android:text="@string/module_menu_custom_food_label_category"
                android:textColor="#FF333333"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/text_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/module_menu_arrow_down"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/module_menu_custom_food_margin"
                android:text="@string/module_menu_select_category"
                android:textColor="@color/common_blue"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/module_menuTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/module_menu_custom_food_margin"
                android:text="@string/module_menu_retail_custom_food_count"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <com.zmsoft.ccd.lib.widget.FoodNumberTextView
                android:id="@+id/edit_food_order_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/module_menu_custom_food_margin"
                android:gravity="center_vertical"
                app:module_menu_left_image="@drawable/module_menu_food_number_minus"
                app:module_menu_right_image="@drawable/module_menu_food_number_plus"
                app:module_menu_middle_hint_color="@color/module_menu_number_hint"
                app:module_menu_middle_max_value="10000"
                app:module_menu_middle_min_value="0"
                app:module_menu_middle_text_color="@color/common_blue"
                app:module_menu_middle_text_size="14sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/module_menu_custom_food_margin"
                android:text="@string/module_menu_custom_food_label_price"
                android:textColor="#FF333333"
                android:textSize="14sp" />


            <com.zmsoft.ccd.lib.widget.EditFoodNumberView
                android:id="@+id/edit_food_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/module_menu_custom_food_margin"
                android:gravity="center_vertical"
                app:module_menu_middle_hint_color="@color/module_menu_number_hint"
                app:module_menu_middle_hint_text="@string/module_menu_input_require"
                app:module_menu_middle_max_value="10000"
                app:module_menu_middle_min_value="0"
                app:module_menu_middle_text_color="@color/common_blue"
                app:module_menu_middle_text_size="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/module_menu_custom_food_margin"
                android:text="@string/module_menu_custom_food_label_can_discount"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switch_can_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/module_menu_custom_food_margin" />

        </RelativeLayout>





    </com.zmsoft.ccd.lib.widget.LinearLayoutDivider>
</ScrollView>