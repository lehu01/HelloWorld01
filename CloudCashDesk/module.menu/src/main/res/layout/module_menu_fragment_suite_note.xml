<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zmsoft.ccd.lib.widget.LinearLayoutDivider
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.95"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:divider="@drawable/shape_divider_line"
        app:showDividers="middle">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">


            <TextView
                android:id="@+id/text_suit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/module_menu_custom_food_margin"
                android:background="@null"
                android:inputType="text"
                android:textColor="#FFE02200"
                android:textColorHint="#FFE02200"
                android:textSize="14sp"
                tools:text="¥99.00" />


            <TextView
                android:id="@+id/text_suit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/module_menu_custom_food_margin"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/text_suit_price"
                android:textColor="#FF333333"
                android:textSize="14sp"
                tools:text="两人套餐" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_rule_and_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="17dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/text_suit_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textColor="#FF666666"
                android:textSize="12sp"
                tools:text="冷菜2选1，热菜2选1。其中水煮花生和千岛湖鱼头一起点有优惠" />

            <TextView
                android:id="@+id/text_valuation_rule_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_suit_desc"
                android:text="@string/module_menu_suit_menu_rule_label"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linear_suit_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_valuation_rule_label"
                android:layout_marginTop="10dp"
                android:orientation="vertical" />

        </RelativeLayout>


        <EditText
            android:id="@+id/edit_suit_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/module_menu_hint_suit_note"
            android:maxLength="32"
            android:maxLines="3"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:textColor="#FF333333"
            android:textColorHint="#FF666666"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/edit_cursor_color"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/module_menu_custom_food_margin"
                android:text="@string/module_menu_suit_label_serving_immediately"
                android:textColor="#FF333333"
                android:textSize="14sp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/edit_suit_serving_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/module_menu_custom_food_margin" />

        </RelativeLayout>

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </com.zmsoft.ccd.lib.widget.LinearLayoutDivider>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <TextView
            android:id="@+id/text_confirm"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/module_menu_shape_red_button"
            android:gravity="center"
            android:text="@string/module_menu_confirm"
            android:textColor="#ffffff"
            android:textSize="15sp" />

    </RelativeLayout>
</RelativeLayout>