<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/module_menu_shape_retail_weigh_top"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/frame_image_menu_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/module_menu_list_margin"
            android:layout_marginRight="@dimen/module_menu_list_margin"
            android:layout_marginTop="@dimen/module_menu_list_margin"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            tools:background="#50000000"
            tools:src="@drawable/module_menu_ic_default_menu_image" />


        <LinearLayout
            android:id="@+id/layout_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/frame_image_menu_icon"
            android:layout_toRightOf="@id/frame_image_menu_icon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_weigh_food_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:background="@drawable/module_res_shape_retail_weigh"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/module_res_label_retail_weigh"
                android:textColor="#ffffff"
                android:textSize="10sp"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/module_menu_list_margin"
                android:layout_weight="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/module_menu_black"
                android:textSize="14sp"
                tools:text="青椒肉" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_bar_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_menu_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/frame_image_menu_icon"
            android:textColor="#FF7D7D7D"
            android:textSize="@dimen/module_menu_food_require_tip"
            tools:text="10000003782324243" />

        <TextView
            android:id="@+id/text_food_unit_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/frame_image_menu_icon"
            android:layout_toRightOf="@id/frame_image_menu_icon"
            android:textSize="@dimen/module_menu_food_price"
            tools:text="¥8.00/份"
            tools:textColor="@color/module_menu_price_red" />


        <ImageView
            android:id="@+id/image_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/module_menu_ic_retail_weigh_close" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_top"
        android:background="#c6c6c6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/view_divider"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/module_menu_shape_retail_weigh_bottom_left"
            android:paddingRight="19dp">


            <TextView
                android:id="@+id/text_weigh_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:includeFontPadding="false"
                android:text="@string/module_menu_retail_weigh_label"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_weigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_weigh_label"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/text_weigh_label"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/module_menu_retail_weigh_input_hint"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#a0a0a0"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/text_weigh_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/edit_weigh"
                android:layout_toRightOf="@id/edit_weigh"
                android:text="@string/module_menu_retail_weigh_unit"
                android:textColor="#333333"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/module_menu_shape_retail_weigh_bottom_right"
            android:gravity="center"
            android:text="@string/module_menu_retail_add_to_cart"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>