<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/module_menu_item_bg_color">

    <TextView
        android:id="@+id/text_menu_specification"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/module_menu_list_margin"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/module_menu_food_speciality"
        android:textSize="12sp"
        tools:text="加香菜1份，加鸡爪一份，加海带一份加海带一份" />

    <TextView
        android:id="@+id/text_menu_extra_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_menu_specification"
        android:layout_alignBottom="@+id/text_menu_specification"
        android:layout_toRightOf="@id/text_menu_specification"
        android:textColor="@color/module_menu_price_red"
        android:textSize="12sp"
        tools:text="加价3元" />

    <com.zmsoft.ccd.lib.widget.FoodNumberTextView
        android:id="@+id/edit_food_number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:module_menu_left_image="@drawable/module_menu_food_number_minus"
        app:module_menu_middle_max_value="10000"
        app:module_menu_middle_min_value="0"
        app:module_menu_middle_text_color="@color/module_menu_black"
        app:module_menu_middle_text_size="14sp"
        app:module_menu_prefix_image="@drawable/module_menu_cart_red"
        app:module_menu_right_image="@drawable/module_menu_food_number_plus" />

    <TextView
        android:id="@+id/text_require_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textColor="#FF333333"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="已点2份" />

    <TextView
        android:id="@+id/text_other_client_reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/module_menu_list_margin"
        android:drawableLeft="@drawable/module_menu_cart_blue"
        android:drawablePadding="3dp"
        android:gravity="center"
        android:textColor="@color/module_menu_blue"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="1份" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_dot_line"
        android:layerType="software" />
</RelativeLayout>