<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_transparent_bg_ripple"
    android:paddingLeft="@dimen/module_menu_list_margin"
    android:paddingRight="@dimen/module_menu_list_margin"
    android:paddingBottom="@dimen/module_menu_list_margin">

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/module_menu_divider_height"
        android:background="@color/module_menu_list_divider" />

    <RelativeLayout
        android:id="@+id/frame_image_menu_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginStart="5dp">

        <ImageView
            android:id="@+id/image_menu_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/module_menu_ic_default_menu_image"
            tools:background="#50000000"
            tools:src="@drawable/module_menu_ic_default_menu_image" />

        <View
            android:id="@+id/view_shade"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="#000000"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_menu_icon_sell_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/module_menu_ic_sell_out"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_alignTop="@id/frame_image_menu_icon"
        android:layout_toRightOf="@id/frame_image_menu_icon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_weigh_food_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/module_res_shape_retail_weigh"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/module_res_label_retail_weigh"
            android:textColor="#ffffff"
            android:textSize="8sp"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/text_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layout_menu_name"
            android:layout_alignStart="@+id/layout_menu_name"
            android:layout_alignTop="@+id/layout_menu_name"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/module_menu_black"
            android:textSize="14sp"
            tools:text="青椒肉" />


        <com.zmsoft.ccd.lib.widget.ShopSpecialityView
            android:id="@+id/shop_speciality_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/module_menu_list_margin"
            app:module_menu_shop_speciality_chili_image="@drawable/module_menu_chili_rate"
            app:module_menu_shop_speciality_recommendation_image="@drawable/module_menu_recommend_rate"
            app:module_menu_shop_speciality_text_color="@color/module_menu_price_red"
            app:module_menu_shop_speciality_text_size="10sp"
            tools:module_menu_shop_speciality_chili_rate="2"
            tools:module_menu_shop_speciality_recommendation_rate="2" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_bar_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_menu_name"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_toRightOf="@id/frame_image_menu_icon"
        tools:text="10000003782324243"
        android:textColor="#FF7D7D7D"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/text_food_unit_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_alignBottom="@+id/frame_image_menu_icon"
        android:layout_toRightOf="@id/frame_image_menu_icon"
        android:textSize="@dimen/module_menu_food_price"
        tools:text="¥8.00/份"
        tools:textColor="@color/module_menu_price_red" />

</RelativeLayout>