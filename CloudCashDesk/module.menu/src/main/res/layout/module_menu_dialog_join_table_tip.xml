<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">


    <ImageView
        android:id="@+id/image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:contentDescription="@null"
        android:padding="15dp"
        android:src="@drawable/module_menu_join_table_close" />


    <TextView
        android:id="@+id/text_join_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="同桌加入点菜"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold" />


    <com.zmsoft.ccd.lib.widget.RoundedImageView
        android:id="@+id/image_user_avatar"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_below="@id/text_join_table"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_launcher"
        app:sriv_border_color="#ffffff"
        app:sriv_border_width="1.5dp"
        app:sriv_oval="true" />


    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_user_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="#ffffff"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_menu_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:src="@drawable/module_menu_join_table_menu" />


</RelativeLayout>